<h1>my flats</h1>

<div class="d-flex justify-content-evenly">
  <% @my_flats.each do |flat| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= flat.name %></h5>
        <h6 class="card-subtitle mb-2 text-body-secondary"><%= flat.price_per_night %></h6>
        <p class="card-text"><%= flat.description %></p>
        <%= link_to "voir plus", flat_path(flat) %>
      </div>
    </div>
  <% end %>
</div>