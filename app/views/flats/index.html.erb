
<div data-controller="search-flat">
  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with url: flats_path, method: :get, html: { class: 'd-flex', data: { search_flat_target: 'form', action: 'submit->search-flat#update' } } do %>
        <%= text_field_tag :query,
              "",
              class: "form-control",
              placeholder: "Type a keyword",
              value: params[:query],
              data: { 
                search_flat_target: 'searchInput', 
              }
          %>
          <%= number_field_tag :guest,
              "",
              class: "form-control",
              placeholder: "guests",
              value: params[:guest],
              data: { 
                search_flat_target: 'searchGuest', 
              }
          %>
        <%= submit_tag "Search", name: "", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

  <div>
   <%= form_tag flats_path, method: :get, data: { search_flat_target: 'sorter' } do %>
    <%= select_tag :filter_option,
        options_for_select([
          ['Tri par défaut', 'default'],
          ['prix croissant', 'price_asc'],
          ['prix décroissant', 'price_desc'],
          ['guests croissant', 'guests_asc'],
          ['guests décroissant', 'guests_desc']
        ]),
        class: "form-control",
        data: { 
          action: "change->search-flat#filter"
        }
    %>
    <% end %>
  </div>
  <%= render 'flats/list', flats: @flats %>
</div>

