
<div data-controller="search-flat">
  <div class="row justify-content-center">
    <div class="col-sm-8 my-3">
      <%= form_with url: flats_path, method: :get, html: { class: 'd-flex', data: { search_flat_target: 'form', action: 'submit->search-flat#update' } } do %>
        <%= text_field_tag :query,
              "",
              class: "form-control",
              placeholder: "Type a keyword",
              value: params[:query],
              data: { 
                search_flat_target: 'searchInput', 
              }
          %>
          <%= text_field_tag :guest,
              "",
              class: "form-control",
              placeholder: "guests",
              value: params[:guest],
              data: { 
                search_flat_target: 'searchGuest', 
              }
          %>
        <%= submit_tag "Search", name: "", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>

  <%= render 'flats/list', flats: @flats %>
</div>

